# Smart Attendance System - Environment Variables
# Copy this file to .env and update the values

# Server
PORT=3000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/smart-attendance

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Email Configuration (Gmail SMTP)
EMAIL_ID=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Google AI Studio API Key (for chatbot)
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=your_google_ai_studio_api_key_here

# Geofencing (Default classroom location)
DEFAULT_LATITUDE=23.0225
DEFAULT_LONGITUDE=72.5714
DEFAULT_GEOFENCE_RADIUS=50

# File Uploads
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads

# Application URLs
# Development URL (used for email links, password reset, etc.)
APP_URL_DEV=http://localhost:3000
# Production URL (used when NODE_ENV=production)
APP_URL_PROD=https://your-production-domain.com
# Current active URL (automatically selected based on NODE_ENV)
APP_URL=http://localhost:3000

# Password Reset
PASSWORD_RESET_EXPIRE=3600000
